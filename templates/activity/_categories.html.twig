<div class="col-md-10 col-12">
  <div class="row">
    {% for category in categories %}
      <div class="col-3">
        <div class="row py-2 mx-2">
          <div class="col-md-3 col-12">
            <img class="img-fluid" src="{{ asset('build/images/' ~ category.logo) }}" alt="imageFiltre">
          </div>
          <div class="col-md-9 col-12">
            <a href="{{ path('app_activity_category', { 'id': category.id }) }}">{{ category.name }}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

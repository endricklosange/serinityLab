{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
  <div class="container ">
   {% for category in categories %}
      <a href="{{ path('app_activity_category', { 'id': category.id }) }}">{{ category.name }}</a>
    {% endfor %}
  <h1>{{category.name}}</h1>
    <div class="row my-5">
      {% for activity in activities %}
        <div class="col-md-4">
          <a href="{{ path('app_activity_show', {'id': activity.id}) }}" class="card">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
              {% if activity.activityImages[0] is defined %}
                <img src="/images/activity/{{activity.activityImages[0].name}}" class="img-fluid"/>
              {% else %}
                <img src="{{ asset('build/images/notfound.png') }}" class="img-fluid"/>
              {% endif %}
              <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
              </a>
            </div>

            <div class="card-body">
              <h5 class="card-title">{{activity.name}}</h5>
              <p class="card-text">{{activity.price}}â‚¬</p>
            </div>
          </a>
        </div>
      {% endfor %}
      
    </div>
  </div>
{% endblock %}

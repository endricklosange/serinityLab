{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pay</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Phone</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Idpayment</th>
                <th>Reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.pay ? 'Yes' : 'No' }}</td>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.phone }}</td>
                <td>{{ order.lastname }}</td>
                <td>{{ order.firstname }}</td>
                <td>{{ order.idpayment }}</td>
                <td>{{ order.reference }}</td>
                <td>
                    <a href="{{ path('app_admin_order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_admin_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_order_new') }}">Create new</a>
{% endblock %}
